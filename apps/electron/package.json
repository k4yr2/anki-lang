{
  "private": true,
  "name": "electron",
  "version": "1.0.0",
  "description": "Anki Lang Electron App",
  "homepage": "https://www.electron.build/configuration#metadata",
  "author": {
    "name": "Kayra",
    "email": "kyrzkaya@gmail.com"
  },
  "main": "app/main.js",
  "scripts": {
    "dev": "npx tsc && electron .",
    "build": "npx tsc && electron-builder"
  },
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.15.30",
    "electron": "^34.5.8",
    "electron-builder": "^26.0.12",
    "typescript": "^5.8.3"
  },
  "build": {
    "asar": true,
    "appId": "com.k4yr2.anki-lang",
    "productName": "Anki Lang",
    "files": [
      "main.js",
      "app/**/*",
      "package.json"
    ],
    "directories": {
      "output": "./dist"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  },
  "dependencies": {
    "electron-serve": "^2.1.1"
  }
}
