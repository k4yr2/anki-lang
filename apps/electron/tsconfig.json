{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2020", "DOM"],
    "allowJs": true,
    "rootDir": "src",
    "outDir": "app/src"
  },
  "include": [
    "src/**/*",
    "../../types/",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "app",
  ]
}